# =============================================================================
# WHISPER TRANSCRIPTION API - Master Environment Configuration
# =============================================================================
# Copy this to .env in the backend/ directory and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/whisper_api?schema=public"

# =============================================================================
# REDIS (for BullMQ job queue)
# =============================================================================
REDIS_URL="redis://localhost:6379"

# =============================================================================
# AWS S3 (for file storage)
# =============================================================================
AWS_ACCESS_KEY_ID="your_access_key_here"
AWS_SECRET_ACCESS_KEY="your_secret_access_key_here"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="whisper-transcriptions-prod"
S3_UPLOAD_PREFIX="audio/"
S3_RESULT_PREFIX="results/"

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET="change_this_to_a_random_64_char_string_in_production"
JWT_EXPIRES_IN="7d"

# =============================================================================
# STRIPE PAYMENTS
# =============================================================================
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_PRICE_ID_PRO="price_your_pro_plan_price_id"
STRIPE_SUCCESS_URL="http://localhost:5173/success"
STRIPE_CANCEL_URL="http://localhost:5173/pricing"

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV="development"
PORT=3000
FRONTEND_URL="http://localhost:5173"
API_BASE_URL="http://localhost:3000"

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS_FREE=10
RATE_LIMIT_MAX_REQUESTS_PRO=60
RATE_LIMIT_MAX_REQUESTS_PAYG=300

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================
QUEUE_CONCURRENCY=2
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000
JOB_RETENTION_HOURS=24
FAILED_JOB_RETENTION_HOURS=168

# =============================================================================
# WORKER CONFIGURATION
# =============================================================================
WORKER_TYPE="local"  # local or cloud
WORKER_CONCURRENCY=2
WHISPER_MODEL_PATH="/path/to/whisper/models"

# For cloud worker (Modal.com)
MODAL_TOKEN_ID="your_modal_token_id"
MODAL_TOKEN_SECRET="your_modal_token_secret"

# =============================================================================
# USAGE LIMITS (monthly minutes)
# =============================================================================
QUOTA_FREE=60
QUOTA_PRO=1000
QUOTA_PAYG=999999

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/api.log"

# =============================================================================
# SECURITY
# =============================================================================
CORS_ORIGIN="http://localhost:5173,http://localhost:5174"
ALLOWED_FILE_TYPES="audio/mpeg,audio/wav,audio/mp4,audio/x-m4a"
MAX_FILE_SIZE_MB=100

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_STRIPE=true
ENABLE_CLOUD_WORKER=false
ENABLE_METRICS=true
ENABLE_SWAGGER=true
