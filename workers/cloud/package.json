{
  "name": "whisper-cloud-worker",
  "version": "1.0.0",
  "description": "Modal.com cloud GPU worker for Whisper transcription",
  "main": "integration/cloudWorker.service.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "deploy": "modal deploy modal_worker.py",
    "deploy:check": "modal function list",
    "logs": "modal logs whisper-transcription",
    "logs:follow": "modal logs whisper-transcription --follow",
    "health": "modal run modal_worker.py::health_check",
    "setup": "pip install -r requirements.txt && modal token new"
  },
  "keywords": [
    "whisper",
    "transcription",
    "modal",
    "serverless",
    "gpu"
  ],
  "author": "WhisperAPI",
  "license": "MIT",
  "devDependencies": {
    "axios": "^1.5.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5"
  },
  "dependencies": {
    "axios": "^1.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "integration/**/*.js",
      "!integration/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js",
      "**/?(*.)+(spec|test).py"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
