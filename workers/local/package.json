{
  "name": "whisper-local-worker",
  "version": "1.0.0",
  "description": "Mac Mini local worker for Whisper transcription with Metal acceleration",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "validate": "node -e \"require('./whisper-runner').validateWhisperSetup().then(r => { console.log(r); process.exit(r.valid ? 0 : 1); })\"",
    "install:whisper": "./install.sh",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "whisper",
    "transcription",
    "metal",
    "worker",
    "bullmq"
  ],
  "author": "WhisperAPI Team",
  "license": "MIT",
  "dependencies": {
    "bullmq": "^4.0.0",
    "ioredis": "^5.3.0",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "@types/node": "^20.8.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "os": [
    "darwin"
  ],
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "!index.js",
      "!jest.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testTimeout": 30000
  }
}
